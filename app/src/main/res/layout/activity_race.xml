<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.RaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-98dp"
        tools:layout_editor_absoluteY="-16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/backBtn"
                android:layout_width="40dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                app:srcCompat="@drawable/ic_back" />

            <EditText
                android:id="@+id/search_friend"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="4"
                android:hint="Your Friend id ?"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10dp"
                app:layout_constraintBottom_toTopOf="@+id/map"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/btn_findFriend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:text="Find"
                app:backgroundTint="#80DEEA" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/display_userlable"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:inputType="text"
                android:maxLines="1"
                android:text="Your id: "

                />

            <TextView
                android:id="@+id/display_user"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:inputType="text"
                android:maxLines="1"

                />

            <TextView
                android:id="@+id/copyUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:background="#7F8580"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="Copy"
                android:textColor="@color/white"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <LinearLayout
                    android:id="@+id/showLayout2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg1"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btnHide"
                        android:layout_width="35dp"
                        android:layout_height="36dp"
                        android:layout_gravity="right|top"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="10dp"

                        android:visibility="invisible"
                        app:srcCompat="@drawable/ic_delete" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/distanceMap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:text="0,0"
                                    android:textSize="30dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="M"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/stepMap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10sp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="30dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="bước"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/timeMap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00:00"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/speedMap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:text="0,0"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/caloMap"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:text="0,00"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingRight="25dp"
                                    android:text="Thời lượng"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingRight="20dp"

                                    android:text="m/s"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="20dp"
                                    android:paddingRight="19dp"
                                    android:text="Kcal"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"/>
                            </LinearLayout>



                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnWin"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:visibility="invisible"
                            app:srcCompat="@drawable/ic_flag" />


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <TextView
            android:id="@+id/displayFriend"
            android:layout_width="wrap_content"
            android:layout_height="20dp"

            android:maxLines="1"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="230dp">

                <LinearLayout
                    android:id="@+id/showLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/bg2"
                    android:gravity="center"
                    android:orientation="vertical">


                    <ImageView
                        android:id="@+id/btnDelete"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="right|top"
                        android:layout_marginLeft="30dp"
                        android:layout_marginRight="13dp"
                        android:layout_marginBottom="30dp"
                        app:srcCompat="@drawable/ic_delete" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginBottom="30dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/distanceMap2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10sp"
                                    android:text="0,0"
                                    android:textSize="30dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="M"
                                    android:textSize="15dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/stepMap2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="10sp"
                                    android:text="0"
                                    android:textColor="@color/black"
                                    android:textSize="30dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="5dp"
                                    android:text="bước"
                                    android:textColor="@color/black"
                                    android:textSize="15dp" />

                            </LinearLayout>
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/timeMap2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="00:00"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/speedMap2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="16dp"
                                    android:text="0,0"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    />

                                <TextView
                                    android:id="@+id/caloMap2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="30dp"
                                    android:text="0,00"
                                    android:textSize="20dp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:layout_marginTop="10dp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingRight="25dp"
                                    android:text="Thời lượng"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:paddingRight="20dp"

                                    android:text="m/s"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="20dp"
                                    android:paddingRight="19dp"
                                    android:text="Kcal"
                                    android:textSize="10dp"
                                    android:textColor="@color/black"/>
                            </LinearLayout>



                        </LinearLayout>

                        <ImageView
                            android:id="@+id/btnWin2"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:visibility="invisible"
                            app:srcCompat="@drawable/ic_flag" />


                    </LinearLayout>


                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>